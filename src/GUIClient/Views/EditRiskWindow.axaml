<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:GUIClient.ViewModels"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:avaloniaProgressRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="650"
        x:Class="GUIClient.Views.EditRiskWindow"
        Title="EditRisk"
        Name="EditRisk"
        Width="1200"
        Height="800"
        MinWidth="900"
        MinHeight="650">
        
        <Design.DataContext>
                <vm:EditRiskViewModel/>
        </Design.DataContext>
        <Panel>
                <ExperimentalAcrylicBorder IsHitTestVisible="False">
                        <ExperimentalAcrylicBorder.Material>
                                <ExperimentalAcrylicMaterial
                                        BackgroundSource="Digger"
                                        TintColor="Black"
                                        TintOpacity="1"
                                        MaterialOpacity="0.65" />
                        </ExperimentalAcrylicBorder.Material>
                </ExperimentalAcrylicBorder>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Panel Margin="10 10" MinWidth="880">
                        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, *, Auto" ColumnDefinitions="*,220">
                                <avaloniaProgressRing:ProgressRing Grid.Row="0" Grid.RowSpan="9" Grid.Column="0" Grid.ColumnSpan="2" Width="100"
                                                       Height="100"
                                                       IsActive="{Binding Loading}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="CornflowerBlue"
                                                       ZIndex="1000"
                                                       Margin="10,10,0,0"/>
                                <!-- HEADER -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                           Classes="header" Text="{Binding StrRisk, Mode=OneTime}" TextAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                           Classes="header_detail" Text="{Binding StrOperation, Mode=OneTime}" TextAlignment="Right" Margin="0 5 50 0"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                           Classes="header_detail" Text="{Binding StrOperationType, Mode=OneTime}" TextAlignment="Right"/>

                                <!-- RISK DATA -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                            Orientation="Horizontal" IsVisible="{Binding IsCtrlNumVisible}">
                                        <TextBlock IsVisible="{Binding ShowEditFields}" Text="ID: " Classes="label"/>
                                        <TextBlock IsVisible="{Binding ShowEditFields}" Text="{Binding Risk.Id}" Classes="formData" Margin="0 5 5 0 "/>
                                </StackPanel>

                                <!-- Control Number and Subject in responsive grid -->
                                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                      ColumnDefinitions="Auto,Auto,150,Auto,Auto,*" Margin="5">
                                        <TextBlock Grid.Column="0" Text="Ctrl #: " Classes="label" VerticalAlignment="Center" Margin="5"/>
                                        <TextBox Grid.Column="2" Text="{Binding Risk.ControlNumber, Mode=TwoWay}" MinWidth="120" Margin="5"/>
                                        <TextBlock Grid.Column="3" Text="{Binding StrSubject}" Classes="label" VerticalAlignment="Center" Margin="5"/>
                                        <TextBox Grid.Column="5" Text="{Binding RiskSubject, Mode=TwoWay}" MinWidth="300" Margin="5"/>
                                </Grid>

                                <!-- Source and Category in responsive grid -->
                                <Grid Grid.Row="3" Grid.Column="0"
                                      ColumnDefinitions="Auto,*,Auto,*" Margin="5">
                                        <TextBlock Grid.Column="0" Text="{Binding StrSource}" Classes="label" VerticalAlignment="Center" Margin="5"/>
                                        <ComboBox Grid.Column="1" x:Name="sourceComboBox"
                                                  SelectedItem="{Binding SelectedRiskSource}"
                                                  ItemsSource="{Binding RiskSources}"
                                                  MinWidth="150" Margin="5">
                                                <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                                <TextBlock Text="{Binding Name}" />
                                                        </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <TextBlock Grid.Column="2" Text="{Binding StrCategory}" Classes="label" VerticalAlignment="Center" Margin="5"/>
                                        <ComboBox Grid.Column="3" x:Name="catComboBox"
                                                  SelectedItem="{Binding SelectedCategory}"
                                                  ItemsSource="{Binding Categories}"
                                                  MinWidth="200" Margin="5">
                                                <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                                <TextBlock Text="{Binding Name}" />
                                                        </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                        </ComboBox>
                                </Grid>
                                <StackPanel Grid.Row="4" Grid.Column="0"
                                            Orientation="Vertical" HorizontalAlignment="Stretch" Margin="5 0">
                                        <TextBlock Text="{Binding StrImpactTypes}" Classes="label"/>
                                        <!-- Risk Catalog List -->
                                        <ListBox Name="LstCatalogs"  Margin="5 5"
                                                 ItemsSource="{Binding RiskCatalogs}" SelectionMode="Multiple,Toggle"
                                                 HorizontalAlignment="Stretch" MinWidth="450" Height="200"
                                                 SelectedItems="{Binding SelectedCatalogs}"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                                 ScrollViewer.VerticalScrollBarVisibility="Visible">
                                                <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="{Binding Number}"/><TextBlock>: </TextBlock><TextBlock Text="{Binding Name}" TextWrapping="Wrap"/>
                                                                </StackPanel>
                                                        </DataTemplate>
                                                </ListBox.ItemTemplate>
                                        </ListBox>
                                </StackPanel>

                                <!-- Owner and Manager in responsive grid -->
                                <Grid Grid.Row="5" Grid.Column="0"
                                      ColumnDefinitions="Auto,*,Auto,*" Margin="5">
                                        <TextBlock Grid.Column="0" Text="{Binding StrOwner}" Classes="label" VerticalAlignment="Center" Margin="5"/>
                                        <ComboBox Grid.Column="1" Name="OwnerComboBox"
                                                  SelectedItem="{Binding SelectedOwner}"
                                                  ItemsSource="{Binding UserListings}"
                                                  MinWidth="150" Margin="5">
                                                <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                                <TextBlock Text="{Binding Name}" />
                                                        </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <TextBlock Grid.Column="2" Text="{Binding StrManager}" Classes="label" VerticalAlignment="Center" Margin="5"/>
                                        <ComboBox Grid.Column="3" Name="ManagerComboBox"
                                                  SelectedItem="{Binding SelectedManager}"
                                                  ItemsSource="{Binding UserListings}"
                                                  MinWidth="200" Margin="5">
                                                <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                                <TextBlock Text="{Binding Name}" />
                                                        </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                        </ComboBox>
                                </Grid>

                                <!-- Entity in responsive grid -->
                                <Grid Grid.Row="6" Grid.Column="0"
                                      ColumnDefinitions="Auto,*" Margin="5">
                                        <TextBlock Grid.Column="0" Text="{Binding StrEntity}" Classes="label" VerticalAlignment="Center" Margin="5"/>
                                        <AutoCompleteBox Grid.Column="1" x:Name="entities"
                                                         MinWidth="200"
                                                         FilterMode="StartsWith"
                                                         SelectedItem="{Binding SelectedEntityName}"
                                                         ItemsSource="{Binding EntitiesNames}"
                                                         Margin="5"/>
                                        
                                        <!--ComboBox Name="EntityComboBox"
                                                  SelectedItem="{Binding SelectedEntityNode, Mode=TwoWay}"
                                                  ItemsSource="{Binding EntityNodes}"
                                                  AutoScrollToSelectedItem="True"
                                                   IsTextSearchEnabled="True"
                                                  Width="250">
                                                <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                        <avalonia:MaterialIcon Kind="{Binding Icon}"
                                                                                 Margin="0 0 5 0 "/>
                                                                        <TextBlock Text="{Binding Name}"/>
                                                                </StackPanel>
                                                        </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                        </ComboBox-->
                                </Grid>
                                <!-- Mid Right RISK DATA -->
                                <Panel Grid.Row="3" Grid.Column="1" Grid.RowSpan="3" Background="DimGray">
                                        <StackPanel  Orientation="Vertical" Margin="5 5  ">
                                                <TextBlock Text="{Binding StrScoring, Mode=OneTime}" Margin="5 0"/>
                                                <StackPanel  Orientation="Vertical" Margin="5 5  ">
                                                        <TextBlock Text="{Binding StrProbability}" Classes="label"/>
                                                        <ComboBox Name="ProbabilityComboBox" 
                                                                  ItemsSource="{Binding Probabilities}"
                                                                  SelectedItem="{Binding SelectedProbability}"
                                                                  Width="200">
                                                                <ComboBox.ItemTemplate>
                                                                        <DataTemplate>
                                                                                <TextBlock Text="{Binding Name}" />
                                                                        </DataTemplate>
                                                                </ComboBox.ItemTemplate>
                                                        </ComboBox>
                                                </StackPanel>
                                                <StackPanel  Orientation="Vertical" Margin="5 5  ">
                                                        <TextBlock Text="{Binding StrImpact}" Classes="label"/>
                                                        <ComboBox Name="ImpactComboBox" 
                                                                  ItemsSource="{Binding Impacts}"
                                                                  SelectedItem="{Binding SelectedImpact}"
                                                                  Width="200">
                                                                <ComboBox.ItemTemplate>
                                                                        <DataTemplate>
                                                                                <TextBlock Text="{Binding Name}" />
                                                                        </DataTemplate>
                                                                </ComboBox.ItemTemplate>
                                                        </ComboBox>
                                                </StackPanel>
                                                <StackPanel  Orientation="Vertical" Margin="5 5  ">
                                                        <TextBlock Text="{Binding StrValue}" Classes="label"/>
                                                        <TextBlock Text="{Binding Value}" FontSize="28"/>
                                                </StackPanel>
                                        </StackPanel>
                                </Panel>
                                
                                <!-- Bottom RISK DATA - Notes section that expands -->
                                <Grid Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" RowDefinitions="Auto,*">
                                        <TextBlock Grid.Row="0" Text="{Binding StrNotes}" Classes="label"/>
                                        <TextBox Grid.Row="1"
                                                 Text="{Binding Notes}"
                                                 IsReadOnly="False"
                                                 AcceptsReturn="True"
                                                 TextWrapping="Wrap"
                                                 MinHeight="80"
                                                 VerticalAlignment="Stretch"
                                                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                                </Grid>
                                <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Margin="0 10 0 0">
                                        <Button Name="BtSave"
                                                Margin="5 0"
                                                IsEnabled="{Binding SaveEnabled}"
                                                Command="{Binding BtSaveClicked}"
                                                CommandParameter="{Binding ElementName=EditRisk}">
                                                <TextBlock Text="{Binding StrSave}"/>
                                        </Button>
                                        <Button  Name="BtCancel"
                                                 Margin="5 0"
                                                 Command="{Binding BtCancelClicked}"
                                                 CommandParameter="{Binding ElementName=EditRisk}">
                                                <TextBlock Text="{Binding StrCancel}"/>
                                        </Button>
                                </StackPanel>
                        </Grid>
                    </Panel>
                </ScrollViewer>

        </Panel>
</Window>
