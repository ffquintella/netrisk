<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:GUIClient.ViewModels"
        xmlns:avaloniaExtraControls="clr-namespace:AvaloniaExtraControls;assembly=AvaloniaExtraControls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="{Binding WindowWidth}" 
        Height="{Binding WindowHeight}"
        Background="{Binding BackgroundColor}"
        x:Class="GUIClient.Views.VerifyFaceID"
        Title="VerifyFaceID">
    <Design.DataContext>
        <viewModels:VerifyFaceIDViewModel/>
    </Design.DataContext>
    <Grid RowDefinitions="Auto,Auto,*,Auto, Auto">
        <TextBlock Grid.Row="0" Text="{Binding StrTitle}" Classes="header"/>
        
        <Svg Grid.Row="2" Path="/Assets/rubber_texture_transparent.svg" Stretch="Fill" ZIndex="1"/>
        <Grid Grid.Row="2" ColumnDefinitions="*, 3*, *" ZIndex="2">
            <Image Grid.Column="1" Source="{Binding Image}"
                   Stretch="Uniform" />
            
        </Grid>
        <StackPanel Grid.Row="4" Orientation="Horizontal" Classes="footer">
            <TextBlock  Text="{Binding FooterText}" Margin="20 3 20 3"/>
        </StackPanel>
    </Grid>
</Window>
