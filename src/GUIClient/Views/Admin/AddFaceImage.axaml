<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:GUIClient.ViewModels"
        xmlns:admin="clr-namespace:GUIClient.ViewModels.Admin"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="700" Height="700"
        x:Class="GUIClient.Views.Admin.AddFaceImage"
        Title="AddFaceImage">
    <Design.DataContext>
        <admin:AddFaceImageViewModel/>
    </Design.DataContext>
    <Grid RowDefinitions="Auto,*,Auto">
        
        <TextBlock Grid.Row="0" Classes="header">Face</TextBlock>
        
        <Image Grid.Row="1" Width="250" Height="400"
               Source="avares://GUIClient/Assets/facemask.png"
               Stretch="Uniform" ZIndex="1"/>
        
        <Image Grid.Row="1" Width="600" Height="600"
               Source="{Binding Image}"
               Stretch="Uniform" ZIndex="0" />
        
    </Grid>
</Window>
